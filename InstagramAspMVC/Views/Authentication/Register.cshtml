
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Instagram</title>
    <!-- FAVIVON -->
    <link rel="shortcut icon" href="~/Content/Assests/images/favicon.png" type="image/png">
    <!-- GOOGLE FONT -->
    <link rel="preconnect" href="https://fonts.gstatic.com">
    <link href="https://fonts.googleapis.com/css2?family=Roboto:ital,wght@0,100;0,300;0,400;0,500;0,700;0,900;1,100;1,300;1,400;1,500;1,700;1,900&display=swap" rel="stylesheet">
    <!-- APP CSS -->
    <link rel="stylesheet" href="~/Content/Assests/css/app.css">
</head>

<body>

    <div class="container">
        <div class="main-container">
            <div class="main-content">
                <div class="slide-container" style="background-image: url(/Content/Assests/images/phone-frame.png)">
                    <div class="slide-content" id="slide-content">
                        <img src="~/Content/Assests/images/slide (1).jpg" alt="slide image" class="active">
                        <img src="~/Content/Assests/images/slide (2).jpg" alt="slide image">
                        <img src="~/Content/Assests/images/slide (3).jpg" alt="slide image">
                        <img src="~/Content/Assests/images/slide (4).jpg" alt="slide image">
                        <img src="~/Content/Assests/images/slide (5).jpg" alt="slide image">
                    </div>
                </div>
                <div class="form-container">
                    <div class="form-content box">
                        <div class="logo">
                            <img src="~/Content/Assests/images/logo-light.png" alt="Instagram logo" class="logo-light">
                            <img src="~/Content/Assests/images/logo-dark.png" alt="Instagram logo" class="logo-dark">
                        </div>
                        <form action="/Authentication/Register" method="post" class="signin-form" id="signin-form">
                            <div class="form-group">
                                <div class="animate-input">
                                    <span>
                                        Email
                                    </span>
                                    <input type="text" name="email" required>
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="animate-input">
                                    <span>
                                        Password
                                    </span>
                                    <input type="password" name="password" required>
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="animate-input">
                                    <span>
                                        Username
                                    </span>
                                    <input type="text" name="username" required>
                                 
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="animate-input">
                                    <span>
                                        Full name
                                    </span>
                                    <input type="text" name="fullname" required>
                                  
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="animate-input">
                                    <span>
                                        Address
                                    </span>
                                    <input type="text" name="address" required>
                                   
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="animate-input">
                                    <span>
                                        Phone number
                                    </span>
                                    <input type="text" name="phonenumber" required>
                                   
                                </div>
                            </div>
                            <div class="form-group">
                               <p style="color:red;font-size:13px">@ViewBag.message</p>
                            </div>
                            <div class="btn-group">
                                <button type="submit" class="btn-login" id="signin-btn">
                                    Sign Up
                                </button>
                            </div>

                        </form>
                    </div>
                    <div class="box goto">
                        <p>                         
                            <a href="/Authentication/Login" >Sign in</a>
                        </p>
                    </div>

                    <div class="app-download">
                        <p>Get the app.</p>
                        <div class="store-link">
                            <a href="#">
                                <img src="~/Content/Assests/images/app-store.png" alt="app store">
                            </a>
                            <a href="#">
                                <img src="~/Content/Assests/images/gg-play.png" alt="google play">
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="footer">
            <div class="links">
                <a href="#">About</a>
                <a href="#">Blog</a>
                <a href="#">Jobs</a>
                <a href="#">Help</a>
                <a href="#">API</a>
                <a href="#">Privacy</a>
                <a href="#">Terms</a>
                <a href="#">Top Accounts</a>
                <a href="#">Hashtags</a>
                <a href="#">Locations</a>
                <a href="#" id="darkmode-toggle">Darkmode</a>
            </div>
            <div class="copyright">
                © 2021 Instagram from Facebook
            </div>
        </div>
    </div>

    <!-- APP JS -->
    <script src="~/Content/Assests/js/app.js"></script>

</body>

</html>


