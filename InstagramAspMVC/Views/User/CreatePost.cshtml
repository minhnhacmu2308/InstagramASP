
@{
    ViewBag.Title = "CreatePost";
    Layout = "~/Views/Shared/MyLayout.cshtml";
}
<main>
    <div class="container">
        <div class="row" style="border: 1px solid #DDDDDD; height: 700px; margin: 50px auto; width: 900px ">
            <div class="col-12" style="padding:20px 80px">
                <div class="row" style="margin-bottom:10px">
                    @if (ViewBag.Msg != null)
                    {
                        if (ViewBag.Msg == "1")
                        {
                            <div class="alert alert-success">
                                <strong>Thành công</strong>
                            </div>
                        }
                    }
                    <div class="col-12" style="margin-top:30px;text-align:center">
                        <h3>Create Post</h3>

                    </div>
                </div>
                
                <form id="formProfile" action="/User/CreatePost" method="post" enctype = "multipart/form-data">
                    <div class="row" style="margin-top:30px">
                        <div class="col-4">
                            <p style="font-weight:bold;font-size:13px">Image</p>
                        </div>
                        <div class="col-8">
                            <div class="mb-3">
                                <input type="file" accept="image/*" name="file" style="display:block" />
                            </div>
                        </div>
                    </div>
                    <div class="row" style="margin-top:30px">
                        <div class="col-4">
                            <p style="font-weight:bold;font-size:13px">Content</p>
                        </div>
                        <div class="col-8">
                            <div class="mb-3">
                                <textarea class="form-control" rows="10" name="content"></textarea>
                                
                            </div>
                        </div>
                    </div>
                    
                    <div class="row" style="margin-top:30px">
                        <div class="col-12" style="display: flex; align-items: center; justify-content: center;">
                            <button style="width:100px" type="submit" class="btn btn-secondary">Save</button>
                        </div>
                    </div>
                </form>

            </div>
        </div>
    </div>
</main>

